<div class="modal fade" id="add_course" tabindex="-1" role="dialog" aria-labelledby="AddCoursePage" aria-hidden="true">
<%= form_for @course=Course.new, remote:true, html: {class: 'form-signin', role: 'form', autocomplete:'off', spellcheck:'false'} do |f| %>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="AddCoursePage">开设课程</h4>
      </div>
      <div class="modal-body ">
        <div id="error_msg"></div>
        <div>
          <%= f.text_field :name,        class: 'form-control form-up',     placeholder: '课程名称' %>
          <%= f.text_field :category,    class: 'form-control form-middle', placeholder: '课程类别' %>
          <%= f.text_area  :information, class: 'form-control form-down',   placeholder: '课程简介' %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit '确定', class: 'btn btn-success' %>
        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
      </div>
    </div>
  </div>
<% end %>
</div> 