<div class="jumbotron">
  <h1><%= link_to @upload.name, "/assignments/files/#{@upload.id}" %></h1>
  <% if @upload.course_id %>
    <h2>属于课程：<%= link_to (@course=Course.find_by_id(@upload.course_id)).name, @course %></h2>
  <% end %>
  <% if @upload.assignment_id %>
    <h2>属于作业：<%= link_to (@assignment=Assignment.find_by_id(@upload.assignment_id)).name, @assignment %></h2>
    <h3>属于课程：<%= link_to (@course=Course.find_by_id(@assignment.course_id)).name, @course %></h2>
  <% end %>
  <% @user=User.find_by_id(@upload.user_id) %>
  <h4>提交者：<%= @user && @user.name %></h4>
  <p class="lead"><%= @upload.information %></p>
</div>

