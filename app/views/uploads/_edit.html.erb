<div class="modal fade" id="edit_upload_<%=@upload.id-%>" tabindex="-1" role="dialog" aria-labelledby="EditUpload<%=@upload.id-%>" aria-hidden="true">
<%= form_for @upload, remote:true, :authenticity_token => true, html: {class: 'form-signin', role: 'form', autocomplete:'off', spellcheck:'false'} do |f| %>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="EditUpload<%=@upload.id-%>"></h4>
      </div>
      <div class="modal-body ">
        <div id="error_msg_edit_upload_<%=@upload.id-%>"></div>
        <div>
          <%= f.hidden_field :course_id %>
          <%= f.hidden_field :assignment_id %>
          <%= f.text_field :name,        class: 'form-control form-up',     placeholder: '附件名称' %>
          <%= f.text_field :category,    class: 'form-control form-middle', placeholder: '附件类别', value: '课件' %>
          <%= f.text_area  :information, class: 'form-control form-middle', placeholder: '附件说明' %>
          <%= f.file_field :file,        class: 'form-control form-down' %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit '确定', class: 'btn btn-success' %>
        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
      </div>
    </div>
  </div>
<% end %>
</div>